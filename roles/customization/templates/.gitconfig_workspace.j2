[user]
    name = {{ user_name }}
    email = {{ user_email }}
{% if ssh.signature is defined %}
    signingkey = {{ ssh.signature.public_key }}

[commit]
    gpgsign = true

[core]
    sshCommand = "ssh -F ~/.ssh/{{ workspace_name }}_config"

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = {{ ssh.signature.allowed_signers }}
{% if ssh.signature.program %}
    program = {{ ssh.signature.program }}
{% endif %}
{% endif %}

[url "git@github.com:$1/"]
    insteadOf = https://github.com/(.*)/